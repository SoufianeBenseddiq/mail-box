<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ma.ensa.mailbox.controller.InboxController"
      spacing="10" style="-fx-padding: 20;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="ðŸ“¥ Inbox" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"/>
        <TextField fx:id="searchField" promptText="Search emails..." prefWidth="200"/>
    </HBox>

    <Separator/>

    <!-- Email Table -->
    <TableView fx:id="emailTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="senderColumn" text="From" prefWidth="200"/>
            <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="350"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Email Details Panel -->
    <VBox fx:id="detailsPanel" spacing="10" style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-padding: 15;" visible="false">
        <Label text="Email Details" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Separator/>

        <HBox spacing="10">
            <Label text="From:" style="-fx-font-weight: bold; -fx-min-width: 80;"/>
            <Label fx:id="detailSender" wrapText="true"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Subject:" style="-fx-font-weight: bold; -fx-min-width: 80;"/>
            <Label fx:id="detailSubject" wrapText="true"/>
        </HBox>

        <HBox spacing="10">
            <Label text="Date:" style="-fx-font-weight: bold; -fx-min-width: 80;"/>
            <Label fx:id="detailDate"/>
        </HBox>

        <Separator/>

        <Label text="Message:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="detailBody" editable="false" wrapText="true" prefHeight="150"/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            <Button text="Close" onAction="#handleCloseDetails"/>
        </HBox>
    </VBox>

</VBox>